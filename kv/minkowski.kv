#:kivy 1.9.2
#:import utils kivy.utils

<MinkowskiBox>:
    orientation:"vertical"

    BoxLayout:
        orientation:"vertical"
        size_hint: 1, 0.15
        pos_hint:{"left":1,"top":1}

        Button:
            text:"Cargar"
            on_press: app.root.cargar()
            background_color: utils.get_color_from_hex("#FF803D")
            background_normal: ''
        Label:
            id:carga
            text: root.cargaTexto
            color: 1,0,0,1

    BoxLayout:
        orientation:"vertical"
        size_hint: 1, 0.06
        BoxLayout:
            orientation:"horizontal"
            
            BoxLayout:
                orientation:"vertical"
                size_hint: .2, 1
                TextInput:
                    id: TIMinko
                    on_text: app.root.processMi()

            BoxLayout:
                orientation:"vertical"

                Label:
                    text: root.minko
                    color: 1,0,0,1

    BoxLayout:
        orientation:"vertical"
        size_hint: 1, 0.1
        Button:
            text:"Aplicar"
            on_press: app.root.aplicarMinkowski()
            background_color: utils.get_color_from_hex("#FF803D")
            background_normal: ''

    BoxLayout:
        orientation:"vertical"
        size_hint: 1, 0.8