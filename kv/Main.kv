#:kivy 1.9.2
#:import utils kivy.utils

<RelativeLL>:
    BoxLayout:
        canvas:
            Color:
                rgb: utils.get_color_from_hex("#0597F2")
            Rectangle:
                size: self.size
                pos: self.pos
        orientation: 'horizontal'

        BoxLayout:
            orientation:"vertical"
            size_hint: .2, .3
            pos_hint:{"right":1,"top":1}
            

            Button:
                text: "Apriori"
                background_color: utils.get_color_from_hex("#024873")
                background_normal: ''
                on_press: root.apriori()
               
                          
                
            Button:
                text:"Similarity metrics"
                background_color: utils.get_color_from_hex("#024873")
                background_normal: ''
                on_press: root.menuMetrics()
                

            Button:
                text:"Clustering"
                background_color: utils.get_color_from_hex("#024873")
                background_normal: ''
                on_press: root.menuClustering()
                      
        BoxLayout:
            orientation:"vertical"
            id: blApriory
            canvas.before:
                Color:
                    rgb: utils.get_color_from_hex("#E3EA42")
                Rectangle:
                    size: self.size
                    pos: self.pos


<BtnMetrics>:
    orientation:"vertical"
    size_hint: .2, .3
    pos_hint:{"right":1,"top":1}
    canvas:
        Color:
            rgb: utils.get_color_from_hex("#0597F2")
        Rectangle:
            size: self.size
            pos: self.pos
    Button:
        text: "Euclidean"
        background_color: (0.5, 0.5, 0.0, 0.5)
        on_press: app.root.Euclidean()

    Button:
        text: "Chebyshev"
        background_color: (0.5, 0.5, 0.0, 0.5)
        on_press: app.root.Chebyshev()

    Button:
        text: "Manhattan"
        background_color: (0.5, 0.5, 0.0, 0.5)
        on_press: app.root.Manhattan()

    Button:
        text: "Minkowsky"
        background_color: (0.5, 0.5, 0.0, 0.5)
        on_press: app.root.Minkowsky()


<BtnClu>:
    orientation:"vertical"
    size_hint: .2, .3
    pos_hint:{"right":1,"top":1}
    canvas:
        Color:
            rgb: utils.get_color_from_hex("#0597F2")
        Rectangle:
            size: self.size
            pos: self.pos
    Button:
        text: "Jerarquico"
        background_color: (0.5, 0.5, 0.0, 0.5)
        on_press: app.root.jer()

    Button:
        text: "K-means"
        background_color: (0.5, 0.5, 0.0, 0.5)
        on_press: app.root.kmeans()