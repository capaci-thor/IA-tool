#:kivy 1.9.2
<AprioryBox>:
    orientation:"vertical"

    BoxLayout:
        orientation:"vertical"
        size_hint: 1, 0.12
        pos_hint:{"left":1,"top":1}

        Button:
            text:"Cargar"
            on_press: app.root.cargar()
        Label:
            id:carga
            text: root.cargaTexto
            color: 1,0,1,1
        BoxLayout:
            orientation:"horizontal"

            TextInput:
                text: "min_support"
            TextInput:
                text: "min_confidence"
            TextInput:
                text: "min_lift"

            TextInput:
                text: "min_length"


        
    BoxLayout:
        orientation:"vertical"
        size_hint: 0.9, 1
        canvas:
            Color:
                rgb: 1, 0, 0