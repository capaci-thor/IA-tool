#:kivy 1.9.2
<AprioryBox>:
    orientation:"vertical"

    BoxLayout:
        orientation:"vertical"
        size_hint: 1, 0.15
        pos_hint:{"left":1,"top":1}

        Button:
            text:"Cargar"
            on_press: app.root.cargar()
        Label:
            id:carga
            text: root.cargaTexto
            color: 1,0,1,1
    BoxLayout:
        orientation:"vertical"
        size_hint: 1, 0.2
        BoxLayout:
            orientation:"horizontal"
            
            BoxLayout:
                orientation:"vertical"
                size_hint: 0.1, 1

                TextInput:
                    text: "a"
                TextInput:
                    text: "b"
                TextInput:
                    text: "c"

                TextInput:
                    text: "d"

            BoxLayout:
                orientation:"vertical"

                Label:
                    text: "min_support"
                    color: 1,0,1,1
                Label:
                    text: "min_confidence"
                    color: 1,0,1,1
                Label:
                    text: "min_lift"
                    color: 1,0,1,1

                Label:
                    text: "min_length"
                    color: 1,0,1,1
            BoxLayout:
                orientation:"vertical"

                Label:
                    text: "min_support"
                    color: 1,0,1,1
                Label:
                    text: "min_confidence"
                    color: 1,0,1,1
                Label:
                    text: "min_lift"
                    color: 1,0,1,1

                Label:
                    text: "min_length"
                    color: 1,0,1,1

    BoxLayout:
        orientation:"vertical"
        size_hint: 1, 0.07
        Button:
            text:"Aplicar"
            on_press: app.root.aplicarApriory()

        
    BoxLayout:
        id: reglas
        orientation:"vertical"
        size_hint: 0.9, 1
        



