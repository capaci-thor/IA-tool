#:kivy 1.9.2
<AprioryBox>:
    orientation:"vertical"

    BoxLayout:
        orientation:"vertical"
        size_hint: 1, 0.2
        pos_hint:{"left":1,"top":1}

        Button:
            text:"Cargar"
            on_press: app.root.cargar()
        Label:
            id:carga
            text: root.cargaTexto
            color: 1,0,1,1
    BoxLayout:
        orientation:"vertical"
        size_hint: 1, 0.3
        BoxLayout:
            orientation:"horizontal"
            
            BoxLayout:
                orientation:"vertical"
                size_hint: 0.1, 1
                
                TextInput:
                    id: support
                    #text: root.support
                    on_text: app.root.process()
                TextInput:
                    id: confidence
                    on_text: app.root.process()
                TextInput:
                    id: lift
                    #text: "c"
                    on_text: app.root.process()

                TextInput:
                    id: len
                    #text: "d"
                    on_text: app.root.process()

            BoxLayout:
                orientation:"vertical"

                Label:
                    text: root.support
                    color: 1,0,1,1
                Label:
                    text: root.confidence
                    color: 1,0,1,1
                Label:
                    text: root.lift
                    color: 1,0,1,1

                Label:
                    text: root.length
                    color: 1,0,1,1

            BoxLayout:
                orientation:"vertical"

                Label:
                    text: "min_support"
                    color: 1,0,1,1
                Label:
                    text: "min_confidence"
                    color: 1,0,1,1
                Label:
                    text: "min_lift"
                    color: 1,0,1,1

                Label:
                    text: "min_length"
                    color: 1,0,1,1

    BoxLayout:
        orientation:"vertical"
        size_hint: 1, 0.1
        pos_hint:{"left":1,"top":1}
        Button:
            text:"Aplicar"
            on_press: app.root.aplicarApriory()

    BoxLayout:
        orientation:"vertical"
        size_hint: 1, 0.1
        pos_hint:{"left":1,"top":1}
        Label:
            text: root.cargando
            color: 1,0,1,1


    BoxLayout:
        orientation:"vertical"
        size_hint: 1, 0.2
        pos_hint:{"left":1,"top":1}
        Button:
            text:"Mostrar datos"
            on_press: app.root.ShowApriory()

        
    BoxLayout:
        orientation:"vertical"
        size_hint: 1, 1
        pos_hint:{"left":1,"top":1}

        



