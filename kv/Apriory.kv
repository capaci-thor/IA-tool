#:kivy 1.9.2
#:import utils kivy.utils

<AprioryBox>:
    orientation:"vertical"

    BoxLayout:
        orientation:"vertical"
        size_hint: 1, 0.2
        pos_hint:{"left":1,"top":1}

        Button:
            text:"Cargar"
            on_press: app.root.cargar()
            background_color: utils.get_color_from_hex("#FF803D")
            background_normal: ''
        Label:
            id:carga
            text: root.cargaTexto
            color: 1,0,0,1
    BoxLayout:
        orientation:"vertical"
        size_hint: 1, 0.3
        BoxLayout:
            orientation:"horizontal"
            
            BoxLayout:
                orientation:"vertical"
                size_hint: 0.13, 1
                
                TextInput:
                    id: support
                    #text: root.support
                    on_text: app.root.process()
                TextInput:
                    id: confidence
                    on_text: app.root.process()
                TextInput:
                    id: lift
                    #text: "c"
                    on_text: app.root.process()

                TextInput:
                    id: len
                    #text: "d"
                    on_text: app.root.process()

            BoxLayout:
                orientation:"vertical"

                Label:
                    text: root.support
                    color: 1,0,0,1
                Label:
                    text: root.confidence
                    color: 1,0,0,1
                Label:
                    text: root.lift
                    color: 1,0,0,1

                Label:
                    text: root.length
                    color: 1,0,0,1

            BoxLayout:
                orientation:"vertical"

                Label:
                    text: "Soporte minimo que deben tener la reglas"
                    color: utils.get_color_from_hex("#FF803D")
                Label:
                    text: "Canfianza minimo que deben tener la reglas"
                    color: utils.get_color_from_hex("#FF803D")
                Label:
                    text: "Elevaci√≥n minimo que deben tener la reglas"
                    color: utils.get_color_from_hex("#FF803D")

                Label:
                    text: "longitud minimo que deben tener la reglas"
                    color: utils.get_color_from_hex("#FF803D")

    BoxLayout:
        orientation:"vertical"
        size_hint: 1, 0.1
        pos_hint:{"left":1,"top":1}
        Button:
            text:"Aplicar"
            on_press: app.root.aplicarApriory()
            background_color: utils.get_color_from_hex("#FF803D")
            background_normal: ''

    BoxLayout:
        orientation:"vertical"
        size_hint: 1, 0.1
        pos_hint:{"left":1,"top":1}
        Label:
            text: root.cargando
            color: 1,0,1,1

    BoxLayout:
        orientation:"vertical"
        size_hint: 1, 0.1
        pos_hint:{"left":1,"top":1}
        Label:
            text: root.numReglas
            color: 1,0,1,1


    BoxLayout:
        orientation:"vertical"
        size_hint: 1, 0.2
        pos_hint:{"left":1,"top":1}
        Button:
            text:"Mostrar datos"
            on_press: app.root.ShowApriory()
            background_color: utils.get_color_from_hex("#FF803D")
            background_normal: ''

        
    BoxLayout:
        orientation:"vertical"
        size_hint: 1, 1
        pos_hint:{"left":1,"top":1}

        



